<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include specific files and directories to be backed up -->
    <include domain="sharedpref" path="."/>
    <include domain="database" path="."/>
    <include domain="file" path="profiles"/>
    <include domain="file" path="settings.json"/>
    
    <!-- Exclude files that might contain sensitive information -->
    <exclude domain="sharedpref" path="debug.xml"/>
    <exclude domain="database" path="sensitive.db"/>
</full-backup-content>
