<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeHands" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.FreeHands.Button</item>
        <item name="textInputStyle">@style/Widget.FreeHands.TextInputLayout</item>
        
        <!-- Custom attributes -->
        <item name="cardViewStyle">@style/Widget.FreeHands.CardView</item>
    </style>
    
    <!-- Light Theme -->
    <style name="Theme.FreeHands.Light" parent="Theme.FreeHands">
        <item name="colorSurface">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Dark Theme -->
    <style name="Theme.FreeHands.Dark" parent="Theme.FreeHands">
        <item name="colorSurface">@color/dark_surface</item>
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.FreeHands.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="Theme.FreeHands.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>
</resources>
